- if flash.any?
  .row
    .col-md-12
      - flash.each do |name, msg|
        %div(class="alert alert-#{name.to_s == 'notice' ? 'success' : 'warning'}")
          %button(type="button" class="close" data-dismiss="alert")
            %span(aria-hidden="true") &times;
            %span(class="sr-only") Close
          = msg
